/* 设置全局背景图 */
body {
    background-image: url('/img/background.jpg') !important;
    background-size: cover;
    /* 图片覆盖整个页面 */
    background-position: center;
    /* 图片居中 */
    background-repeat: no-repeat;
    /* 不重复 */
    background-attachment: fixed;
    /* 固定背景（滚动时不移动） */
}

/* 设置卡片高斯模糊 */
.card {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px) // 兼容 Safari
}

// 导航栏
.navbar {
    background: rgba(255, 255, 255, 0.8) // 白色半透明（深色主题可用 rgba(0,0,0,0.5)）
    backdrop-filter: blur(10px) // 高斯模糊
    -webkit-backdrop-filter: blur(10px) // 兼容 Safari
}

.navbar-menu {
    background-color: transparent
}

// 移动端减少模糊
@media screen and (max-width: 768px)
    .navbar-main
        backdrop-filter: blur(5px)
        -webkit-backdrop-filter: blur(5px) // 兼容 Safari

// 前后文章导航样式变更
.article-nav-prev, .article-nav-next 
    @extend .card
    padding: 10px 15px
    background: rgba(255, 255, 255, 0.8) !important
    backdrop-filter: blur(3px) !important
    -webkit-backdrop-filter: blur(3px)
    color: #4A4A4A !important

.post-navigation
    gap: 10px;

.card {
    border-radius: 8px;   // 圆角

    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.15), 0px 1px 3px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease-in-out; // 添加平滑过渡效果

    &:hover {
        box-shadow: 0px 8px 12px rgba(0, 0, 0, 0.2), 0px 2px 6px rgba(0, 0, 0, 0.15); // 鼠标悬停时增强阴影
    }
}

// 页脚高斯模糊
.footer {
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px) // 兼容 Safari
}

// 黑条
.mask {
    color: #000000;
    background-color: #000000;
    &:hover{
        color: #ffffff;
    }
}


/* 以下为扩宽卡片 */
// 宽度对应的值参见base.styl
@media screen and (min-width: 1472px)
  .container
    max-width: 1280px !important
    width: 1280px !important

@media screen and (min-width: 1280px) and (max-width: 1471px)
  .container
    max-width: 1088px !important
    width: 1088px !important

@media screen and (min-width: 1088px) and (max-width: 1279px)
  .container
    max-width: 900px !important
    width: 900px !important

@media screen and (min-width: 900px) and (max-width: 1087px)
  .container
    max-width: 769px !important
    width: 769px !important

@media screen and (min-width: 769px) and (max-width: 899px)
  .container
    max-width: 769px !important
    width: 769px !important

@media screen and (max-width: 768px) {
    .is-4-desktop {
        width: 20rem;
    }
}

@media screen and (min-width: 1472px) {
    .column.is-4, .column.is-4-tablet, .is-4-desktop, .is-4-widescreen {
        width: 25rem;
    }
    .column.is-8, .column.is-8-tablet, .is-8-desktop, .is-8-widescreen {
        width: calc(100% - 25rem);
    }
}

@media screen and (min-width: 769px) and (max-width: 1471px) {
    .column.is-4, .column.is-4-tablet, .is-4-desktop, .is-4-widescreen {
        width: 20rem;
    }
    .column.is-8, .column.is-8-tablet, .is-8-desktop, .is-8-widescreen {
        width: calc(100% - 20rem);
    }
}

@media screen and (max-width: 768px) {
    .column.is-4, .column.is-4-tablet, .is-4-desktop, .is-4-widescreen {
        width: 100%;
    }
    .column.is-8, .column.is-8-tablet, .is-8-desktop, .is-8-widescreen {
        width: 100%;
    }
}
